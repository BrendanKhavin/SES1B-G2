<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".staffmain">

    <Button
        android:id="@+id/button5"
        android:layout_width="168dp"
        android:layout_height="132dp"
        android:layout_marginStart="290dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/btn_bg"
        android:gravity="center|bottom"
        android:onClick="logout"
        android:padding="2dp"
        android:text="Logout"
        android:textColor="@color/HeadingColour"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.787"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/managebookBtn" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="152dp"
        android:layout_marginRight="152dp"
        android:text="Welcome Staff Member!"
        android:textColor="@color/titleColour"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menuupdateBtn"
        android:layout_width="168dp"
        android:layout_height="132dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/btn_bg"
        android:gravity="center|bottom"
        android:padding="2dp"
        android:text="Update Menus"
        android:textColor="@color/HeadingColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/managebookBtn"
        android:layout_width="168dp"
        android:layout_height="132dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/btn_bg"
        android:gravity="center|bottom"
        android:padding="2dp"
        android:text="Manage Bookings"
        android:textColor="@color/HeadingColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/staffKeyBtn"
        android:layout_width="168dp"
        android:layout_height="132dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/btn_bg"
        android:gravity="center|bottom"
        android:padding="2dp"
        android:text="generate staff key"
        android:textColor="@color/HeadingColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuupdateBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>